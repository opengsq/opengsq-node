{
  "name": "opengsq-node",
  "version": "1.0.0",
  "description": "Node.js library designed for querying game servers.",
  "repository": {
    "type": "git",
    "url": "https://github.com/opengsq/opengsq-node.git"
  },
  "homepage": "https://node.opengsq.com",
  "bugs": {
    "url": "https://github.com/opengsq/opengsq-node/issues"
  },
  "files": [
    "dist",
    "!dist/**/*.test.*",
    "!dist/**/*.spec.*"
  ],
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "opengsq": "./dist/cli.js"
  },
  "engines": {
    "node": ">=8.0"
  },
  "scripts": {
    "build": "tsc",
    "build:api": "npm run build & api-extractor run --local & api-documenter markdown -i temp -o docs/api",
    "docfx": "docfx docs/docfx.json --serve",
    "prepublishOnly": "npm run build",
    "lint": "eslint ./src",
    "lint:fix": "eslint ./src --fix",
    "test": "jest",
    "test:coverage": "jest --coverage"
  },
  "keywords": [],
  "license": "MIT",
  "devDependencies": {
    "@eslint/js": "^9.19.0",
    "@microsoft/api-documenter": "^7.26.7",
    "@microsoft/api-extractor": "^7.49.2",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.12.0",
    "eslint": "^9.19.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-jest": "^28.11.0",
    "eslint-plugin-tsdoc": "^0.4.0",
    "globals": "^15.14.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.22.0"
  },
  "dependencies": {
    "commander": "^13.1.0",
    "crc-32": "^1.2.2",
    "seek-bzip": "^2.0.0"
  }
}